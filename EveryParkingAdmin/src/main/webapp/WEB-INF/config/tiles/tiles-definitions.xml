  <!-- 템플릿에 설정된 페이지의 구성 요소에 대한 실제 파일을 지정합니다. -->
  <definition name="tiles.layouts.type1" template="/WEB-INF/config/tiles/layout/type1.jsp">
    <put-attribute name="title" value="/WEB-INF/config/tiles/type1/title.jsp"></put-attribute>
    <put-attribute name="menu" value="/WEB-INF/config/tiles/type1/menu.jsp"></put-attribute>
    <put-attribute name="body" value="/WEB-INF/config/tiles/type1/body.jsp"></put-attribute>
    <put-attribute name="modal" value="/WEB-INF/config/tiles/type1/modal.jsp"></put-attribute>
  </definition>

  <definition name="*" extends="tiles.layouts.type1">
    <put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
  </definition>
  <definition name="*/*" extends="tiles.layouts.type1">
    <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
  </definition>
  <definition name="*/*/*" extends="tiles.layouts.type1">
    <put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
  </definition>

  <definition name="tiles.layout.type2" template="/WEB-INF/config/tiles/layout/type2.jsp"></definition>
  <definition name="/popup/*">
    <put-attribute name="body" value="/WEB-INF/views/popup/{1}.jsp"></put-attribute>
  </definition>

